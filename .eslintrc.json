{
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
        "jsx": true
    }
  },
  "extends": "airbnb",
  "plugins": [
    "react",
    "import",
    "react-hooks",
    "prettier"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "commonjs": false
  },
  "parser": "babel-eslint",
  "rules": {
    "eqeqeq": 0,
    "semi": [
      "error", "never"
    ],
    "import/first": 0,
    "max-len": [
      1, {
        "code": 200
      }
    ],
    "no-unused-vars": 1,
    "global-require": 0,
    "prefer-destructuring": 0,
    "class-methods-use-this": 0,
    "react/no-unused-state": 1,
    "react/prop-types": 0,
    "react/jsx-filename-extension": [1, {
      "extensions": [".js", ".jsx"]
    }],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "linebreak-style": 0,
    "react/prefer-stateless-function": 0,
    "react/destructuring-assignment": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "react/no-access-state-in-setstate": 0
  }
}